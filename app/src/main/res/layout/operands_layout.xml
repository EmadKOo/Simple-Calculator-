<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_weight="1">


    <TextView
        android:id="@+id/undoOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:textColor="@color/operation_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="7dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/addOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/operation_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="7dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/minusOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/operation_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="7dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/multiplyOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="@color/operation_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="7dp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/devideOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textColor="@color/operation_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="7dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/equalOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textColor="@color/operation_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="7dp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/redoOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redo"
        android:textColor="@color/operation_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="7dp"
        android:layout_margin="10dp"/>
</LinearLayout>